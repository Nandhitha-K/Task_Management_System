@{
    ViewData["Title"] = "About";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Custom styles */
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin-bottom: 60px;
            background-image: url('../Images/login2.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            
        }

        .container {
            max-width: 600px;
            margin: auto;
            padding-top: 50px;
            padding-bottom: 50px;
        }

        .about-heading {
            text-align: center;
            margin-bottom: 30px;
        }

            .about-heading h2 {
                font-size: 3rem;
                color: white;
            }

        .about-content {
            margin-bottom: 40px;
            color: floralwhite;
        }

        .about-img {
            text-align: center;
            margin-bottom: 30px;
        }

            .about-img img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
                box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="about-heading">
            <h2 class="fw-bold">About Task Manager</h2>
        </div>
        <div class="about-content">
            <div class="about-img">
                <!--  <img src="~/Images/home.jpg" alt="Task Scheduler Image">-->
        </div>

            <p>
                Task Manager is a web application designed to help users organize and manage their tasks effectively. 
             </p>
             <p>
                    With its intuitive interface and powerful features, Task Scheduler simplifies task management, allowing users to stay focused and productive.
            </p>
            <p>
                If you are an individual organizing your daily tasks, Task Scheduler provides the tools you need to streamline your workflow. From creating deadlines and tracking progress, Task Scheduler is your ultimate productivity companion.
            </p>
        </div>
        
    </div>

    <!-- Bootstrap JavaScript (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
